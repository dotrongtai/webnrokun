<%- include("../partials/header", { title: "Đăng ký tài khoản" }) %>


<!-- Snow Effect -->
<div class="snow">
  <% for (let i = 0; i < 35; i++) { %>
    <span style="
      left:<%= Math.random()*100 %>%;
      animation-duration:<%= 3 + Math.random()*5 %>s;
      animation-delay:<%= Math.random()*3 %>s;
    "></span>
  <% } %>
</div>

<div style="
  max-width:900px;
  margin:25px auto;
  background:linear-gradient(to bottom, #42c7dd, #07a1c2);
  padding:22px;
  border-radius:10px;
  position:relative;
  z-index:3;
">

  <h2 style="text-align:center; color:#fff;">ĐĂNG KÝ</h2>

  <div style="
    background:#ffffffd8;
    padding:20px;
    max-width:500px;
    margin:auto;
    border-radius:8px;
  ">
    <form action="/register" method="POST">

      <label><b>Tài khoản:</b></label>
      <input type="text" name="username" required minlength="3" maxlength="20"
             style="width:100%; padding:10px; border-radius:6px; border:1px solid #ccc; margin-bottom:12px;">

      <label><b>Mật khẩu:</b></label>
      <input type="password" name="password" required minlength="5" maxlength="20"
             style="width:100%; padding:10px; border-radius:6px; border:1px solid #ccc; margin-bottom:12px;">

      <label><b>Nhập lại mật khẩu:</b></label>
      <input type="password" name="repassword" required minlength="5" maxlength="20"
             style="width:100%; padding:10px; border-radius:6px; border:1px solid #ccc; margin-bottom:12px;">

      <button type="submit" style="
        width:100%; padding:12px; border:none; background:#2196F3;
        color:white; border-radius:6px; font-size:16px; cursor:pointer;
      ">
        Đăng ký ngay
      </button>

    </form>

    <% if (msg) { %>
      <div style="
        margin-top:15px; padding:10px; background:#fff3cd;
        border-radius:6px; border:1px solid #ffeeba; color:#856404;
        text-align:center; font-weight:bold;
      ">
        <%= msg %>
      </div>
    <% } %>

  </div>

</div>

