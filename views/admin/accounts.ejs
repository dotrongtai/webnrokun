<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleButtons = document.querySelectorAll(".btn-toggle");

    toggleButtons.forEach(btn => {
      btn.addEventListener("click", async () => {
        const id = btn.dataset.id;
        const type = btn.dataset.type;

        let url = "";
        if(type === "admin") url = `/admin/accounts/toggle-admin/${id}`;
        if(type === "active") url = `/admin/accounts/toggle-active/${id}`;
        if(type === "ban") url = `/admin/accounts/toggle-ban/${id}`;

        btn.style.opacity = "0.5";

        try {
          const res = await fetch(url, {
            method: "POST",
            headers: { "Content-Type": "application/json" }
          });

          const data = await res.json();

          btn.style.opacity = "1";

          if(!data.success) {
            alert("C√≥ l·ªói x·∫£y ra!");
            return;
          }

          if(type === "admin") {
            btn.textContent = data.admin == 1 ? "ADMIN" : "USER";
            btn.classList.toggle("yes", data.admin == 1);
            btn.classList.toggle("no", data.admin != 1);
          }

          if(type === "active") {
            btn.textContent = data.active == 1 ? "ON" : "OFF";
            btn.classList.toggle("yes", data.active == 1);
            btn.classList.toggle("no", data.active != 1);
          }

          if(type === "ban") {
            btn.textContent = data.ban == 1 ? "ƒê√£ BAN" : "Ho·∫°t ƒê·ªông";

            btn.classList.toggle("no", data.ban == 1);
            btn.classList.toggle("yes", data.ban != 1);
          }

        } catch (err) {
          console.error(err);
          btn.style.opacity = "1";
          alert("L·ªói k·∫øt n·ªëi server!");
        }
      });
    });
  });
</script>

