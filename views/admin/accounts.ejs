    border-radius: 6px;
    text-decoration: none;
    background: #ffe0b2;
    border: 1px solid #f57c00;
    color: #000;
    font-weight: bold;
    transition: 0.2s;
  }

  .pagination a:hover {
    background: #ffd180;
    transform: translateY(-1px);
  }

  .pagination a.active {
    background: #ff9800;
    color: white;
  }

  @media(max-width:760px) {
    .tet-banner { font-size: 13px; }
    .admin-wrapper { flex-direction: column; }
    .sidebar { width: 100%; }
  }
</style>

