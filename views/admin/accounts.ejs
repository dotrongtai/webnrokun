  }

  .sidebar a.active {
    background: #ff9800;
    color: white;
  }


  .content {
    flex: 1;
    min-width: 0; 
    background: #ffcc80;
    border-radius: 12px;
    border: 2px solid #f57c00;
    padding: 18px;
  }

  .content h2 {
    margin-top: 0;
    color: #d84315;
  }


  .search-box {
    display: flex;
    gap: 10px;
    margin-top: 10px;
  }

  .search-box input {
    flex: 1;
    height: 38px;
    padding: 0 12px;
    border-radius: 8px;
    border: 1px solid #f57c00;
    outline: none;
  }

  .search-box input:focus {
    box-shadow: 0 0 0 3px rgba(245,124,0,0.25);
  }

  .search-box button {
    height: 38px;
    padding: 0 18px;
    border-radius: 8px;
    border: none;
    background: #43a047;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: 0.2s;
  }

  .search-box button:hover {
    filter: brightness(1.1);
    transform: translateY(-1px);
  }


  .table-container {
    width: 100%;
    overflow-x: auto;
    background: white;
    border-radius: 12px;
    margin-top: 15px;
    border: 1px solid #f57c00;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    table-layout: auto;  
    min-width: 1100px;
  }

  th {
    background: #ffe0b2;
    padding: 10px;
    border-bottom: 2px solid #f57c00;
    color: #d84315;
    font-size: 14px;
    text-align: center;
    white-space: nowrap;
  }

  td {
    padding: 10px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    font-size: 13px;
    white-space: nowrap;
  }

  tr:hover td {
    background: #fff3e0;
  }

  td.password-col {
    min-width: 70px;
    max-width: 300px;
    word-break: break-all;
    white-space: normal;
    text-align: left;
    font-size: 12px;
  }

  .badge {
    padding: 3px 7px;
    border-radius: 8px;
    font-weight: bold;
    color: white;
    display: inline-block;
    font-size: 9px;
    letter-spacing: 0.2px;
    text-transform: uppercase;
  }
  .yes { background: #2e7d32; }
  .no  { background: #c62828; }

  .pagination {
