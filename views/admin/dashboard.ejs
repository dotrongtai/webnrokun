<style>
  /* Layout Dashboard */
  .admin-wrapper {
    max-width: 1100px;
    margin: 20px auto;
    display: flex;
    gap: 15px;
    position: relative;
    z-index: 5;
  }

  /* Sidebar */
  .sidebar {
    width: 260px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.12);
    padding: 15px;
    height: fit-content;
  }

  .sidebar h3 {
    text-align: center;
    margin-top: 0;
    margin-bottom: 15px;
    color: #d32f2f;
  }

  .sidebar a {
    display: block;
    padding: 12px 12px;
    margin-bottom: 10px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    color: #333;
    background: #f7f7f7;
    transition: 0.2s;
  }

  .sidebar a:hover {
    background: #ffe082;
    transform: translateX(3px);
  }

  .sidebar a.active {
    background: #ffcc80;
    color: #000;
  }

  /* Content */
  .content {
    flex: 1;
    background: white;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.12);
    padding: 20px;
  }

  .content h2 {
    margin-top: 0;
    color: #1976d2;
  }

  /* Card */
  .card {
    background: #f9f9f9;
    padding: 15px;
    border-radius: 10px;
    margin-top: 15px;
    border-left: 5px solid #ff9800;
  }

  /* T·∫øt effect */
  .tet {
    pointer-events: none;
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    z-index: 2;
    overflow: hidden;
  }

  .tet span {
    position: absolute;
    top: -20px;
    font-size: 20px;
    opacity: 0.9;
    animation: tetFall linear infinite;
  }

  @keyframes tetFall {
    to {
      transform: translateY(105vh) rotate(360deg);
      opacity: 0.4;
    }
  }
</style>

