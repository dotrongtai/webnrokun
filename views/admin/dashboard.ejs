<style>
  .neon-particle{
    position: fixed;
    top: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0.9;
    filter: blur(0.2px);
    z-index: 5;

    animation: neonFly linear infinite;
    box-shadow: 0 0 12px currentColor, 0 0 25px currentColor;
  }

  @keyframes neonFly{
    0%{
      transform: translate(var(--startX), var(--startY)) scale(0.5);
      opacity: 0;
    }
    15%{
      opacity: 1;
    }
    100%{
      transform: translate(var(--endX), var(--endY)) scale(1.2);
      opacity: 0;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {

    const colors = ["#ff1744","#ff9100","#00e5ff","#00e676","#d500f9","#ffea00"];

    function spawnNeon(side){
      const p = document.createElement("div");
      p.className = "neon-particle";

      const size = 5 + Math.random() * 12;
      p.style.width = size + "px";
      p.style.height = size + "px";

      const color = colors[Math.floor(Math.random()*colors.length)];
      p.style.background = color;
      p.style.color = color;

      const startY = Math.random()*100;
      const endY = startY + (Math.random()*40 - 20);

      let startX = side === "left" ? -80 : window.innerWidth + 80;
      let endX = side === "left" ? window.innerWidth + 80 : -80;

      p.style.setProperty("--startX", startX + "px");
      p.style.setProperty("--startY", startY + "vh");
      p.style.setProperty("--endX", endX + "px");
      p.style.setProperty("--endY", endY + "vh");

      const duration = 4 + Math.random()*5;
      p.style.animationDuration = duration + "s";

      document.body.appendChild(p);
      setTimeout(()=>p.remove(), duration*1000);
    }

    setInterval(()=>{
      spawnNeon("left");
      spawnNeon("right");
    }, 120);
  });
</script>

