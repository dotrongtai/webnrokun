  .snowflake {
    position: fixed;
    top: -10px;
    color: white;
    font-size: 18px;
    opacity: 0.9;
    pointer-events: none;
    animation: fallSnow linear infinite;
    z-index: 1;
  }
  @keyframes fallSnow {
