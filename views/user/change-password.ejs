    justify-content:space-between;
    background:#f0faff;
    border-radius:6px;
    overflow:hidden;
    margin-bottom:15px;
  }
  .tabs a {
    flex:1;
    padding:10px;
    font-weight:bold;
    text-align:center;
    text-decoration:none;
    color:#000;
    display:block;
  }
  .tabs a:nth-child(1){ background:#e0f7ff; }
  .tabs a:nth-child(2){ background:white; }


  .block {
    background: #ffe0b2;
    padding: 25px;
    border-radius: 8px;
    line-height: 1.6;
  }

  .form-row {
    display:flex;
    align-items:center;
    gap:16px;
    margin-bottom:16px;
  }

  .form-row label {
    width:190px;
    font-weight:bold;
    text-align:left;
    margin:0;
  }

  .form-row input {
    flex:1;
    max-width:420px;
    padding:12px;
    border-radius:8px;
    border:1px solid #ccc;
    font-size:15px;
    outline:none;
  }

  .form-row input:focus {
    border-color:#1e88e5;
    box-shadow:0 0 0 3px rgba(30,136,229,0.2);
  }


  .btn-save {
    width:100%;
    max-width:420px;
    margin:10px auto 0 auto;
    display:block;
    padding:12px;
    border:none;
    background:#1e88e5;
    color:white;
    border-radius:8px;
    font-size:16px;
    cursor:pointer;
    font-weight:bold;
  }


  .alert-error {
    margin-bottom:15px;
    padding:12px;
    background:#f8d7da;
    border-radius:8px;
    border:1px solid #f5c6cb;
    color:#721c24;
    text-align:center;
    font-weight:bold;
  }

  .alert-success {
    margin-bottom:15px;
    padding:12px;
    background:#d4edda;
    border-radius:8px;
    border:1px solid #c3e6cb;
    color:#155724;
    text-align:center;
    font-weight:bold;
  }


  @media(max-width:600px){
    .form-row{
      flex-direction:column;
      align-items:stretch;
      gap:6px;
    }
    .form-row label{
      width:auto;
    }
    .form-row input{
      max-width:100%;
    }
  }

  @media(max-width:760px){
    .tet-banner{ font-size:13px; }
  }
